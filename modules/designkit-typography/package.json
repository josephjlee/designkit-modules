{
  "name": "designkit-typography",
  "version": "1.1.4",
  "description": "A Sass module for typography used in RightScale apps.",
  "author": "RightScale, Inc.",
  "license": "MIT",
  "keywords": [
    "sass",
    "css",
    "styles"
  ],
  "repository": "rightscale-design/designkit-typography",
  "scripts": {
    "start": "npm run build:serve",
    "serve": "serve docs/ -o",
    "watch": "nodemon -e scss -x 'npm run build:dev'",
    "release": "npm run build:dev && npm run build:readme",
    "build:scss": "node ./scripts/scss.js",
    "build:prefix": "node ./scripts/postcss.js",
    "build:docs": "node ./scripts/docs.js",
    "build:readme": "node ./scripts/readme.js",
    "build:dev": "npm run build:scss && npm run build:prefix && npm run build:docs",
    "build:serve": "run-p watch serve"
  },
  "files": [
    "package.json",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "dist/designkit-typography.css",
    "src/_designkit-typography.scss",
    "src/index.scss"
  ],
  "scss": "src/_designkit-typography.scss",
  "main": "dist/designkit-typography.css",
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "designkit-colors": "^1.1.0",
    "lodash": "^4.17.5",
    "node-sass": "^4.5.3",
    "nodemon": "^1.10.0",
    "npm-run-all": "^4.1.3",
    "serve": "^6.0.6"
  }
}
